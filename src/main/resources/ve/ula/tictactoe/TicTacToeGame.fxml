<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            alignment="CENTER"
            fx:controller="ve.ula.tictactoe.controllers.TicTacToeGameController" >
    <VBox alignment="CENTER">
        <Text fx:id="winnerText" strokeType="OUTSIDE" strokeWidth="0.0" text="Tic-Tac-Toe" textAlignment="CENTER" wrappingWidth="237.9443359375">
            <font>
                <Font size="39.0" />
            </font>
        </Text>
        <Canvas fx:id="myCanvas" layoutX="50" layoutY="50" width="600" height="600"/>
        <HBox alignment="CENTER">
            <Button fx:id="restart" text="Restart" />
            <Button fx:id="reset" text="Reset"/>
        </HBox>
    </VBox>
</VBox>
